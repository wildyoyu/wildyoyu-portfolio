---
const title = "Wildyoyu — Macro & Wildlife";
const lead =
  "Un portfolio minimalista centrado en el detalle: texturas, ojos compuestos, alas iridiscentes y escenas de vida salvaje.";
---
<section class="section sticky-wrap" aria-label="Presentación">
  <div class="sticky">
    <div class="container" style="text-align:center">
      <h1 class="h1" style="margin:0 0 .6rem 0">{title}</h1>
      <p class="lead" style="margin:0 auto 2rem auto">{lead}</p>

      <img
        class="hero-visual shadow"
        src="/photos/hero.webp"
        alt="Macrofotografía de [especie] sobre [planta] — nombre científico"
        width="2560"
        height="1440"
        style="aspect-ratio: 16 / 9; object-fit: cover;"
      />

      <p class="lead" style="margin:1rem auto 0; font-size:clamp(.95rem,1.7vw,1.05rem);">
        Desplázate ↓ para ver el efecto
      </p>
    </div>
  </div>
</section>
