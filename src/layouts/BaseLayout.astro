---
import '/src/styles/global.css';
import Lightbox from '../components/Lightbox.astro';

const {
  title = 'wildyoyu — Macro & Wildlife',
  description = 'Portfolio de fotografía macro, naturaleza y wildlife',
  ogImage = '/og.webp',        // puedes cambiarlo por otra imagen en páginas internas
  noindex = false,
  lang = 'es'
} = Astro.props;

// Construimos URLs absolutas para OG/Twitter/canonical
const site = Astro.site; // definido en astro.config.mjs
const pathname = Astro.url?.pathname ?? '/';
const canonical = site ? new URL(pathname, site).href : undefined;
const ogAbs = site ? new URL(ogImage, site).href : ogImage;

// JSON-LD mínimo (WebSite)
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: title,
  url: canonical ?? (site?.href ?? ''),
  inLanguage: lang
};
---
<html lang={lang} class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Canonical -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Theme color (mejora tintado en móviles) -->
    <meta name="theme-color" content="#0b0d10" />

    <!-- Robots (noindex opcional por página) -->
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogAbs} />
    <meta property="og:image:alt" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogAbs} />

    <!-- JSON-LD -->
    <script type="application/ld+json">
      {JSON.stringify(jsonLd)}
    </script>

    <meta name="color-scheme" content="dark light" />
  </head>
  <body class="min-h-screen">
    <slot />

    <!-- Lightbox global -->
    <Lightbox />

    <!-- Fallback de scroll (solo si el navegador no soporta CSS scroll-driven) -->
    <script type="module">
      import '../scripts/scroll-fallback.ts';
    </script>
  </body>
</html>
