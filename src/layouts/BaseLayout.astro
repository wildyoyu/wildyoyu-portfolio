---
import '@/styles/global.css';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import Lightbox from '../components/Lightbox.astro';

const {
  title = 'wildyoyu — Macro & Wildlife',
  description = 'Portfolio de fotografía macro, naturaleza y wildlife',
  ogImage = '/og.webp',
  noindex = false,
  lang = 'es'
} = Astro.props;

const site = Astro.site;                          // define "site" en astro.config.* para tener canonical absoluto
const pathname = Astro.url?.pathname ?? '/';
const canonical = site ? new URL(pathname, site).href : undefined;
const ogAbs = site ? new URL(ogImage, site).href : ogImage;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: title,
  url: canonical ?? (site?.href ?? ''),
  inLanguage: lang
};
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="format-detection" content="telephone=no" />
    <meta name="referrer" content="no-referrer-when-downgrade" />
    <meta name="color-scheme" content="dark light" />
    <meta name="theme-color" content="#0b0d10" />
    <title>{title}</title>

    {canonical && <link rel="canonical" href={canonical} />}

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogAbs} />
    <meta property="og:image:alt" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogAbs} />

    <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
  </head>

  <body>
    <NavBar />
    <main><slot /></main>
    <Footer />

    <!-- Lightbox SOLO aquí para evitar duplicados -->
    <Lightbox />

    <!-- Fallback de scroll y pequeños fixes de UX: sirve desde /public -->
    <script src="/scripts/scroll-fallback.js" defer></script>
  </body>
</html>
