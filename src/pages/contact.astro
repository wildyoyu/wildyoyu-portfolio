---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contacto — Wildyoyu" description="Escríbeme para colaboraciones, impresiones y licencias.">
  <section class="section">
    <div class="container" style="max-width: 820px;">
      <h1 class="h1" style="margin:0 0 .6rem 0;">Contacto</h1>
      <p class="lead" style="margin:0 0 1.2rem 0;">Cuéntame tu idea o proyecto.</p>

      <form class="card">
        <label class="fld">Nombre
          <input required type="text" name="name" placeholder="Tu nombre" />
        </label>

        <label class="fld">Email
          <input required type="email" name="email" placeholder="tu@correo.com" />
        </label>

        <label class="fld">Mensaje
          <textarea required name="message" rows="6" placeholder="¿Qué necesitas?"></textarea>
        </label>

        <button class="btn" type="submit">Enviar</button>
      </form>
    </div>
  </section>

  <style>
    .card{ padding: clamp(14px,2vw,20px); border-radius: var(--radius);
      background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.02));
      outline: 1px solid rgba(255,255,255,.06); box-shadow: var(--shadow);
    }
    .fld{ display:grid; gap:6px; margin: 10px 0; font-weight:600; }
    input, textarea{
      width:100%; border-radius: 12px; border:1px solid rgba(255,255,255,.14);
      background:#0f1216; color: var(--fg); padding: .8rem .9rem; font: inherit;
    }
    .btn{
      margin-top: .6rem; display:inline-block; padding:.9rem 1.2rem; border-radius:999px;
      background: var(--fg); color: var(--bg); font-weight:700; border:0; cursor:pointer;
    }
  </style>
</BaseLayout>
