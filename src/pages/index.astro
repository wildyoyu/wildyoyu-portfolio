---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ParallaxGallery from '../components/ParallaxGallery.astro';
---
<BaseLayout title="wildyoyu — Macro & Wildlife">
  <Hero />
  <ParallaxGallery />
  <section class="section center">
    <div class="container" style="text-align:center">
      <h2 class="h1" style="font-size: clamp(1.6rem, 4vw, 2.8rem);">¿Te gusta lo que ves?</h2>
      <p class="lead">Contacto para colaboraciones, impresiones y licencias.</p>
      <a href="mailto:hello@wildyoyu.net" class="shadow" style="display:inline-block;padding:.9rem 1.2rem;border-radius:999px;background:var(--fg);color:var(--bg);font-weight:600;">
        Escríbeme
      </a>
    </div>
  </section>
</BaseLayout>
